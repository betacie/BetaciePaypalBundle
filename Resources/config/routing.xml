<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- Default -->
    <route id="betacie_paypal.default_success" pattern="/success">
        <default key="_controller">BetaciePaypalBundle:Default:success</default>
    </route>

    <route id="betacie_paypal.default_cancel" pattern="/cancel">
        <default key="_controller">BetaciePaypalBundle:Default:cancel</default>
    </route>

    <!-- Checkout -->
    <route id="betacie_paypal.checkout_return" pattern="/checkout/return">
        <default key="_controller">BetaciePaypalBundle:Checkout:return</default>
    </route>

    <route id="betacie_paypal.checkout_cancel" pattern="/checkout/cancel">
        <default key="_controller">BetaciePaypalBundle:Checkout:cancel</default>
    </route>

</routes>
